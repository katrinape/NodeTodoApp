<!DOCTYPE html>
<html>

<head>
  <title> ToDo App </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href="/styles.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <h1 class="display-4 text-white"> Simple Todo App </h1>
    </div>
  </nav>
  <div class="container jumbotron">

    <form action="/addtask" method="POST">

      <% if(errMessage) { %>
      <div class="alert alert-danger" role="alert"> <%= errMessage %> </div>
      <% } %>

      <div class="form-inline form-group">
        <label class="col-sm-2 text-right" for="title"> Title </label>
        <input type="text" name="title" id="title" class="form-control form-control-lg col-sm-10">
      </div>

      <div class="form-inline form-group">
        <label class="col-sm-2" for="description">Description</label>
        <input type="text" name="description" id="description" class="form-control form-control-lg col-sm-10">
      </div>

      <div class="row">
        <div class="offset-sm-8 col-sm-4">
          <button class="btn btn-secondary btn-lg col-sm-12"> Add Task </button>
        </div>
      </div>

      <% if(tasks.length > 0) { %>
      <h2> Task List </h2>


      <% for( var i = 0; i < tasks.length; i++){ %>

      <div class="alert alert-dark">
        <h4>
          <%= tasks[i].title %>
        </h4>
        <hr>
        <%= tasks[i].description %>
      </div>

      <% } %>

      <div class="row">
        <div class="offset-sm-4 col-sm-4">
          <button class="btn btn-secondary btn-lg col-sm-12" formaction="/removeTask"> Remove </button>
        </div>
        <div class="col-sm-4">
          <button class="btn btn-secondary btn-lg col-sm-12" formaction="/clearTasks"> Clear </button>
        </div>
      </div>
      <% } %>

    </form>
  </div>
</body>

</html>